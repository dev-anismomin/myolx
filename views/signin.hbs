{{!< main }}
	<header id="head" class="secondary"></header>

	<!-- container -->
	<div class="container">

		<div class="row">		
			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Sign in</h1>
				</header>
				
				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Sign in to your account</h3>
							<h3 class="thin text-center">Register a new account</h3>
							<p class="text-center text-muted">Lorem ipsum dolor sit amet, <a href="/register">Register</a> adipisicing elit. Quo nulla quibusdam cum doloremque incidunt nemo sunt a tenetur omnis odio. </p>
							<hr>

							{{#if error }}
							<div class="alert alert-danger"  role="error">
								{{ error }}
							</div>
							{{/if}}
							<form action="/" method="post" novalidate>
								<div class="top-margin">
									<label>Email <span class="text-danger">*</span></label>
									<input type="text" class="form-control" name="email" value="{{ input.email }}">
									{{#if error.errors.email.message }}
										<div class="badge badge-danger"  role="error">
											{{ error.errors.email.message }}
										</div>
									{{/if}}
								</div>
								<div class="top-margin">
									<label>Password <span class="text-danger">*</span></label>
									<input type="password" class="form-control" name="password">
									{{#if error.errors.password.message }}
										<div class="badge badge-danger"  role="error">
											{{ error.errors.password.message }}
										</div>
									{{/if}}
								</div>
								<hr>
								<div class="row">
									<!-- <div class="col-lg-8">
										<b><a href="/register">Register</a></b>
									</div>  -->
									<div class="col-lg-4 text-right">
										<button class="btn btn-action" type="submit">Sign in</button>
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>
				
			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->
	

	