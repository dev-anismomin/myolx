{{!< main }}

	<header id="head" class="secondary"></header>

	<!-- container -->
	<div class="container">

		<div class="row">
			
			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Postings</h1>
				</header>


				<div class="container">
			
					<div class="row">
				        <ul class="thumbnails">
				        {{#each postings}}
				            <div class="col-md-4">
				                <div class="thumbnail">
				                    <img src="/{{ this.images.0.path }}" alt="ALT NAME" class="img-responsive" />
				                    <div class='caption'>
				                    <div class="row">
				                        <div class='col-xs-8 col-md-8'>
				                         <h3>{{ this.title }}</h3>
				                         <p>{{ this.description }}</p>
				                        </div>
				                        <div class="col-xs-4 col-md-4 review">
				                            <div class="panel status panel-primary">
				                                <div class="panel-heading">
				                                    <h1 class="panel-title text-center">${{ this.price }}</h1>
				                                </div>
				                                <div class="panel-body text-center">                        
				                                    17 Reviews
				                                </div>
				                            </div>
				                        </div>
				                    </div>
				                        <p align="center"><a data-id="/posting/{{this._id}}" href="/posting/{{this._id}}" class="btn btn-primary btn-block">Open</a>
				                        </p>
				                    </div>
				                </div>
				            </div>
				          
				            {{/each}}
				        </ul>
				    </div>
				
				</div>
			
				
			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->
	
